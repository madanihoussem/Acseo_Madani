{% extends 'base.html.twig' %}

{% block title %}Admin Controller!{% endblock %}

{% block body %}
<h1>Liste des Contacts</h1>
<div class="tab-pane fade show" id="users-all" role="tabpanel" aria-labelledby="users-all-tab">
    <table class="table-sm table mt-4 table-hover rounded shadow-lg p-3 mb-5 mt-2 bg-body table-responsive">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Traité</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.nom }}</td>
                <td class="ellipsis">{{ contact.email }}</td>
                <td>
                    <label class="switch">
                        <input type="checkbox" id="{{contact.id}}" 
                        {% if contact.isTreated %}checked{% endif %}
                        />
                        <span class="slider round"></span>
                    </label>
                </td>
                <td>
                    <div class="btn-group align-middle text-start " role="group" aria-label="Button group with nested dropdown">
                        <div class="btn-group text-start" role="group">
                            <button style="border-radius: 35px;" id="btnGroupDrop1" type="button" class="btn btn-outline-light text-dark border border-secondary btn-sm" data-bs-toggle="dropdown" aria-expanded="false">
                                Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                <li><button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#Show-{{ contact.id }}">Afficher</button></li>
                                {# <li><a type="button" class="dropdown-item">Modifier</a> </li> #}
                            </ul>
                            <!-- modal show -->
                            <div class="modal fade" id="Show-{{ contact.id }}" tabindex="-1" aria-labelledby="modalShowLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Contact</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body w-100">
                                        <table class="table {# table-sm mt-3 table-hover rounded shadow-lg p-3 mb-3 mt-2 bg-body table-responsive #}">
                                            <tbody>
                                                <tr>
                                                    <th>Questions</th>
                                                    <td>
                                                        {% for question in contact.question %}
                                                            <tr>
                                                                <td>{{question}}</td>
                                                            <tr> 
                                                        {% endfor %}
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            
        {% else %}
            <tr>
                <td colspan="10">Champ vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center  mt-0 mb-0">
    
        {# {{ knp_pagination_render(users, "pagination.html.twig") }} #}
    </div>
</div>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <script>
        var $container = $('.switch');
        $container.find('input').on('click', function(e) {
            var $link = $(e.currentTarget);
            $.ajax({
                url: '/contact/'+$link[0].id+'/istreated/'+$link[0].checked,
                method: 'POST'
            }).then(function(response) {
                console.log('Contact mis à jour!');
            });
        });
    </script>

{% endblock %}
